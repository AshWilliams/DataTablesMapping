@model IEnumerable<DataTablesMapping.Lib.Models.User>
@{
    ViewBag.Title = "Combined Set";
}

<h2>All Users</h2>

<table>
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date Of Birth
            </th>
            <th>
                User ID
            </th>
            <th>
                Cash On Hand
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @(user.DateOfBirth.HasValue ? user.DateOfBirth.Value.ToString("yyyy-MM-dd") : "Not Available")
                </td>
                <td>
                    @user.ID
                </td>
                <td>
                    $@user.CashOnHand
                </td>
            </tr>
        }
    </tbody>
</table>